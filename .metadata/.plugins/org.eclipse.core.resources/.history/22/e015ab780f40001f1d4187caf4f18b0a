package com.springbook.view.user;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.springbook.biz.user.UserVO;
import com.springbook.biz.user.impl.UserDAO;
import com.springbook.view.controller.Controller;

public class GetBoardListController implements Controller {

	@Override
	public String handleRequest(HttpServletRequest request, HttpServletResponse response) {
		System.out.println("글 목록 검색 처리"); // 1. 사용자 입력 정보 추출(검색 기능은 나중에 구현) // 2. DB
		  연동 처리 BoardVO vo = new BoardVO(); BoardDAO boardDAO = new BoardDAO();
		  List<BoardVO> boardList = boardDAO.getBoardList(vo);
		  
		  // 3. 검색 결과를 세션에 저장하고 목록 화면으로 이동한다. HttpSession session =
		  request.getSession(); session.setAttribute("boardList", boardList);
		  response.sendRedirect("getBoardList.jsp"); }

	// 3. 화면 네비게이션
	if(user!=null)

	{
		return "getBoardList.do";
	}else
	{
		return "login";
	}
}

}
